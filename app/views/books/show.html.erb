<p><%= link_to 'Delete Book', book_path(@book), method: :delete %></p>
<p><%= link_to 'Add Review', new_book_review_path(@book) %></p>

<h1>book:  <%= @book.title %></h1>

<section class="main-show">
  <section class='book-card' id=<%= @book.id %>>
    <img src=<%= @book.book_cover_url %> alt="Book cover">
    <p>Number of Pages: <%= @book.number_of_pages %></p>
    <p>Author(s):
    <% @book.authors.each do |author| %>
    <%= link_to(author.name, author_path(author)) %>
    <% end %>
    </p>
    <p>Year Published: <%= @book.year_published %></p>
    <p id='average_book_review'>
      Average Book Review: <%= @book.average_review %>
    </p>

    <div class="review-description" %>
      <h2>Book's Reviews</h2>
      <% @book.reviews.each do |review| %>
      <br>
      <div id="review-description-<%= review.id %>">
      <h3>Title: <%= review.title %></h3>
      <p>User Name: <%= link_to review.username, user_path(review.username) %></p>
      <p>Rating: <%= review.rating %></p>
        <div class='book-review-card'>
          <p>Description: <%= review.text %></p>
        </div>
      </div>
      <br>
      <br>
      <% end %>
    </div>
  </section>
  <section class="book-review-statistics-top" id=<%= @book.id %>>
    <h2>Book's Top Reviews</h2>
    <% @top_three_reviews.each do |review| %>
    <br>
    <div id="statistics-top-<%= review.id %>">
      <h3>Title: <%= review.title %></h3>
      <p>Review Rating: <%= review.rating %></p>
      <p>User Name: <%= link_to review.username, user_path(review.username) %></p>
    </div>
    <% end %>
  </section>

  <section class="book-review-statistics-bottom" id=<%= @book.id %>>
    <h2>Book's Bottom Reviews</h2>
    <% @bottom_three_reviews.each do |review| %>
    <br>
    <div id="statistics-bottom-<%= review.id %>">
      <h3>Title: <%= review.title %></h3>
      <p>Review Rating: <%= review.rating %></p>
      <p>User Name: <%= link_to review.username, user_path(review.username) %></p>
    </div>
    <% end %>
  </section>
</section>
